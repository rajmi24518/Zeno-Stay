<% layout ("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
 <ul>
    <h3>Listing Details</h3>
    <!-- Used bootstrap card code -->
    <div class="card col-6" >
      <img src="<%=listings.image.url%>" class="card-img-top show-img" alt="listings_image">
      <div class="card-body">
        <p class="card-text">
          <b> <%= listings.title %> </b><br>
          <li><%= listings.description %></li> 
          <li>&#8377; <%= listings.price.toLocaleString("en-IN") %></li> 
          <li><%= listings.location %></li>
          <li><%= listings.country %></li>
          </p>
      </div>
    </div>
    <!-- end the bootstrap card code -->

   <!-- <li><%= listings.title %></li> 
