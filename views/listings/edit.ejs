<% layout ("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
<h3>Edit your Listing</h3>
    <form   method="POST" action="/listings/<%= listings._id %>?_method=PUT "   >
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listings[title]" value="<%=listings.title%>" type="text" class="form-control"/>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea  name="listings[description]" class="form-control"><%= listings.description %> </textarea> 
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listings[image.url]" value="<%=listings.image%>" type="text" class="form-control"/>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listings[price]" value="<%=listings.price%>" type="number" class="form-control"/>
         </div>
         <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listings[country]" value="<%=listings.country%>" type="text" class="form-control"/>
            
        </div>
        </div>
        <div class="mb-3">
            <label for="loction" class="form-label">Location</label>
            <input name="listings[location]" value="<%=listings.location%>" type="text" class="form-control"/>
        </div>
        
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
</div>
</div>


